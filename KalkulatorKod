using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Kalkulator4
{
    public partial class Form1 : Form
    {
        double firstNumber = 0;
        string operation = "";
        bool isNewEntry = true;
        public Form1()
        {
            InitializeComponent();
            textBox1.Text = "0";
        }

        private void Form1_Load(object sender, EventArgs e)
        {

        }

        private void button1_Click(object sender, EventArgs e)
        {
            AddDigit("7");
        }

        private void btn5_Click(object sender, EventArgs e)
        {
            AddDigit("4");
        }

        private void Divi_Click(object sender, EventArgs e)
        {

        }

        private void textBox1_TextChanged(object sender, EventArgs e)
        {

        }

        private void btn8_Click(object sender, EventArgs e)
        {
            AddDigit("8");
        }

        private void btn9_Click(object sender, EventArgs e)
        {
            AddDigit("9");
        }

        private void Modulo_Click(object sender, EventArgs e)
        {
            SetOperation("%");
        }

        private void btn5_Click_1(object sender, EventArgs e)
        {
            AddDigit("5");
        }

        private void btn6_Click(object sender, EventArgs e)
        {
            AddDigit("6");
        }

        private void Multi_Click(object sender, EventArgs e)
        {
            SetOperation("*");
        }

        private void btn1_Click(object sender, EventArgs e)
        {
            AddDigit("1");
        }

        private void btn2_Click(object sender, EventArgs e)
        {
            AddDigit("2");
        }

        private void btn3_Click(object sender, EventArgs e)
        {
            AddDigit("3");
        }

        private void Sub_Click(object sender, EventArgs e)
        {
            SetOperation("-");
        }

        private void Clear_Click(object sender, EventArgs e)
        {
            textBox1.Text = "0";
            firstNumber = 0;
            operation = "";
            isNewEntry = true;
        }

        private void btn0_Click(object sender, EventArgs e)
        {
            AddDigit("0");
        }

        private void btnDot_Click(object sender, EventArgs e)
        {
            if (isNewEntry)
            {
                textBox1.Text = "0";
                isNewEntry = false;
            }
            if (!textBox1.Text.Contains(","))
                textBox1.Text += ",";

        }

        private void Result_Click(object sender, EventArgs e)
        {
            Calculate();
        }

        private void Add_Click(object sender, EventArgs e)
        {
            SetOperation("+");
        }

        void AddDigit(string d)
        {
            if (isNewEntry || textBox1.Text == "0")
            {
                textBox1.Text = "";
                isNewEntry = false;
            }
            textBox1.Text += d;
        }
        void SetOperation(string op)
        {
            if (!double.TryParse(textBox1.Text.Replace(',', '.'), out firstNumber))
            {
                textBox1.Text = "Error";
                isNewEntry = true;
                return;
            }
            operation = op;
            isNewEntry = true;
        }
        void Calculate()
        {
            if (!double.TryParse(textBox1.Text.Replace(',', '.'), out double second))
            {
                textBox1.Text = "Error";
                isNewEntry = true;
                return;
            }
            double result = firstNumber;
            switch (operation)
            {
                case "+": result = firstNumber + second; break;
                case "-": result = firstNumber - second; break;
                case "*": result = firstNumber * second; break;
                case "/":
                    if (second == 0)
                    {
                        textBox1.Text = "Error";
                        isNewEntry = true;
                        return;
                    }
                    result = firstNumber / second;
                    break;
                case "%":
                    result = firstNumber % second;
                    break;
            }
            textBox1.Text = result.ToString();
            isNewEntry = true;
        }

        private void Ba_Click(object sender, EventArgs e)
        {
            if (textBox1.Text == "Error")
                return;
            if (textBox1.Text.Length > 1)
                textBox1.Text = textBox1.Text.Substring(0, textBox1.Text.Length - 1);
            else
                textBox1.Text = "0";

        }

        private void Sqt_Click(object sender, EventArgs e)
        {
            if (!double.TryParse(textBox1.Text,out double x))
            {
                textBox1.Text = "Error";
                isNewEntry = true;
                return;
            }
            if (x < 0)
            {
                textBox1.Text = "Error";
                isNewEntry = true;
                return;
            }
            double result = Math.Sqrt(x);
            textBox1.Text = result.ToString();
            isNewEntry = true;
        }

        private void plusmin_Click(object sender, EventArgs e)
        {
            if (textBox1.Text == "Error" || textBox1.Text == "0")
                return;
            if (textBox1.Text.StartsWith("-"))
                textBox1.Text = textBox1.Text.Substring(1);
            else
                textBox1.Text = "-" + textBox1.Text;
        }

        private void Pow_Click(object sender, EventArgs e)
        {
            if(!double.TryParse(textBox1.Text, out double x))
            {
                textBox1.Text = "Error";
                isNewEntry = true;
                return;
            }
            double result = x * x;
            textBox1.Text = result.ToString();
            isNewEntry = true;
        }
    }
}
